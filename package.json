    "chromium": "^3.0.3",
    "eslint": "^6.8.0",
    "eslint-plugin-github": "^4.0.0",
    "karma": "^6.3.16",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^10.2.0",
    "typescript": "^3.9.3"
  },
  "eslintIgnore": [
    "dist"
  ]
