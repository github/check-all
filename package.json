{
  "name": "@github/check-all",
  "description": "Multiple checkbox selection helper.",
  "version": "0.4.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "repository": "github/check-all",
  "files": [
    "dist"
  ],
  "scripts": {
